{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "declaration": false,
    "outDir": "esm",
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.ts", "src/main.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts", "src/main.ts"],
    "out": "docs"
  }
}
